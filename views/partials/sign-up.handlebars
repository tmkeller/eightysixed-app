          <option class="st" value="District of Columbia" {{#if business.DistrictofColumbia}}selected{{/if}}>District Of
            Columbia</option>
          <option class="st" value="Florida" {{#if business.Florida}}selected{{/if}}>Florida</option>
          <option class="st" value="Georgia" {{#if business.Georgia}}selected{{/if}}>Georgia</option>
          <option class="st" value="Hawaii" {{#if business.Hawaii}}selected{{/if}}>Hawaii</option>
          <option class="st" value="Idaho" {{#if business.Idaho}}selected{{/if}}>Idaho</option>
          <option class="st" value="Illinois" {{#if business.Illinois}}selected{{/if}}>Illinois</option>
          <option class="st" value="Indiana" {{#if business.Indiana}}selected{{/if}}>Indiana</option>
          <option class="st" value="Iowa" {{#if business.Iowa}}selected{{/if}}>Iowa</option>
          <option class="st" value="Kansas" {{#if business.Kansas}}selected{{/if}}>Kansas</option>
          <option class="st" value="Kentucky" {{#if business.Kentucky}}selected{{/if}}>Kentucky</option>
          <option class="st" value="Louisiana" {{#if business.Louisiana}}selected{{/if}}>Louisiana</option>
