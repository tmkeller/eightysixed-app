<div class="card sign_up_sheet" style="margin: 50px">
  <form class="row sign-up-form" style="max-width: 70%;">
    <div class="row">
      {{#if business}}
      <style>
        .sign-up-form input::placeholder {
          color: black;
        }
      </style>
      {{/if}}
      <div class="input-field col s12" style="margin: 2px 0px 2px 0px">
        <input placeholder="Name" id="company_name" type="text" class="company_name"
          value="{{#if business}}{{business.name}}{{/if}}">
      </div>
      <div class="col s12">
        <select name="category" id="category_name">
          {{#unless business}}
          <option value="" disabled selected>Category</option>
          {{/unless}}
          <option value="Restaurant" {{#if business.Restaurant}}selected{{/if}}>Restaurant</option>
          <option value="Hotel" {{#if business.Hotel}}selected{{/if}}>Hotel</option>
          <option value="Cafe" {{#if business.Cafe}}selected{{/if}}>Cafe</option>
          <option value="Bar" {{#if business.Bar}}selected{{/if}}>Bar</option>
        </select>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s12" style="margin: 2px 0px 2px 0px">
        <input placeholder="Address" id="textarea2" class="materialize-textarea address" data-length="120"
          style="padding: 0px;" value="{{#if business.address}}{{business.address}}{{/if}}">
      </div>
    </div>
    <div class="row">
      <div class="input-field col s6" style="margin: 2px 0px 2px 0px">
        <input placeholder="Address 2 (optional)" id="textarea3" class="materialize-textarea addresstwo"
          data-length="120" style="padding: 0px;" value="{{#if business.address}}{{business.addresstwo}}{{/if}}">
      </div>
      <div class="input-field col s6" style="margin: 2px 0px 2px 0px">
        <input placeholder="City" id="textarea6" class="materialize-textarea city" data-length="120"
          style="padding: 0px;" value="{{#if business}}{{business.city}}{{/if}}">
      </div>
    </div>
    <div class="row">
      <div class="input-field col s6" style="margin: 2px 0px 2px 0px">
        <select class="select">
          {{#unless business}}
          <option class="st" value="State" disabled selected>State</option>
          {{/unless}}
          <option class="st" value="Alabama" {{#if business.Alabama}}selected{{/if}}>Alabama</option>
          <option class="st" value="Alaska" {{#if business.Alaska}}selected{{/if}}>Alaska</option>
          <option class="st" value="Arizona" {{#if business.Arizona}}selected{{/if}}>Arizona</option>
          <option class="st" value="Arkansas" {{#if business.Arkansas}}selected{{/if}}>Arkansas</option>
          <option class="st" value="California" {{#if business.California}}selected{{/if}}>California</option>
          <option class="st" value="Colorado" {{#if business.Colorado}}selected{{/if}}>Colorado</option>
          <option class="st" value="Connecticut" {{#if business.Connecticut}}selected{{/if}}>Connecticut</option>
